            <!-- END DATAGRID -->

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="1" Width="Auto" HorizontalAlignment="Right" Name="chkShowProtocol" IsChecked="False" Content="Show/Hide Protocol" VerticalAlignment="Center"/>
            </Grid>

        </Grid>


    </DockPanel>
</Window>
