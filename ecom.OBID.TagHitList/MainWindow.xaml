                                <TextBlock  Background="Transparent" Text="{Binding Path=SerialNumber}" FontWeight="Bold" FontSize="{Binding ElementName=cboFontSize, Path=SelectedValue, UpdateSourceTrigger=PropertyChanged,Mode=OneWay}"/>
